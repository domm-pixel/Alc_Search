<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">#ffffff</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@color/colorPrimaryDark</item> <!-- Toolbar의 타이틀 텍스트-->
    </style>
</resources>